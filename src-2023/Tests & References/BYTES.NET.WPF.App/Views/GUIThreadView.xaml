<Window x:Class="BYTES.NET.WPF.App.Views.GUIThreadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GUIThreadView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Click Me" Name="Button" Click="ButtonClick" HorizontalAlignment="Center" Margin="0,292,0,108" Grid.Row="1"/>
        <TextBox Grid.Row="1" Name="GUIInputText" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0,10,0,0"/>
    </Grid>
</Window>
